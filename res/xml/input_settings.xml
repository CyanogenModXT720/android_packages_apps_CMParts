<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- General settings -->
	<PreferenceCategory android:key="general_category"
		android:title="@string/general_title">

		<!-- Long Press Home -->
		<PreferenceScreen android:key="long_press_home"
			android:title="@string/long_press_home_title" android:summary="@string/long_press_home_summary">
			<intent android:action="android.intent.action.MAIN"
				android:targetPackage="com.cyanogenmod.cmparts"
				android:targetClass="com.cyanogenmod.cmparts.activities.LongPressHomeActivity" />
		</PreferenceScreen>

		<!-- Long Press Menu -->
		<PreferenceScreen android:key="long_press_menu"
			android:title="@string/long_press_menu_title" android:summary="@string/long_press_menu_summary">
			<intent android:action="android.intent.action.MAIN"
				android:targetPackage="com.cyanogenmod.cmparts"
				android:targetClass="com.cyanogenmod.cmparts.activities.LongPressMenuActivity" />
		</PreferenceScreen>

		<!-- Custom actions for search key - submenu -->
		<PreferenceScreen android:key="input_search_key"
			android:title="@string/input_search_key_title" android:summary="@string/input_search_key_summary">
			<intent android:action="android.intent.action.MAIN"
				android:targetPackage="com.cyanogenmod.cmparts"
				android:targetClass="com.cyanogenmod.cmparts.activities.InputSearchKeyActivity" />
		</PreferenceScreen>

		<!-- Haptic Feedback -->
		<PreferenceScreen android:key="haptic_settings"
			android:title="@string/haptic_title" android:summary="@string/haptic_summary">
			<intent android:action="android.intent.action.MAIN"
				android:targetPackage="com.cyanogenmod.cmparts"
				android:targetClass="com.cyanogenmod.cmparts.activities.HapticTweaksActivity" />
		</PreferenceScreen>

		<!-- Backtrack Minipad -->
		<CheckBoxPreference android:key="pref_backtrack"
			android:title="@string/pref_backtrack_title"
			android:summary="@string/pref_backtrack_summary" />

	</PreferenceCategory>

	<PreferenceCategory android:title="@string/buttons_title"
		android:key="pref_category_button_settings">

		<CheckBoxPreference android:key="pref_trackball_wake"
			android:title="@string/pref_trackball_wake_title" android:summary="@string/pref_trackball_wake_summary" />

        <CheckBoxPreference android:key="pref_volume_wake"
            android:title="@string/pref_volume_wake_title"
            android:summary="@string/pref_volume_wake_summary" />

		<CheckBoxPreference android:key="pref_volbtn_music_controls"
			android:title="@string/pref_volbtn_music_controls_title"
			android:summary="@string/pref_volbtn_music_controls_summary" />

		<CheckBoxPreference android:key="pref_cambtn_music_controls"
			android:title="@string/pref_cambtn_music_controls_title"
			android:summary="@string/pref_cambtn_music_controls_summary" />

		<CheckBoxPreference android:key="pref_volbtn_orientation"
			android:title="@string/pref_volbtn_orientation_title"
			android:summary="@string/pref_volbtn_orientation_summary" />

		<Preference android:key="pref_user_defined_key1"
			android:title="@string/user_defined_key1" android:summary="@string/user_defined_not_set" />
		<Preference android:key="pref_user_defined_key2"
			android:title="@string/user_defined_key2" android:summary="@string/user_defined_not_set" />
		<Preference android:key="pref_user_defined_key3"
			android:title="@string/user_defined_key3" android:summary="@string/user_defined_not_set" />

		<Preference android:key="pref_user_envelope_key"
			android:title="@string/user_defined_envelope_key" android:summary="@string/user_defined_not_set" />
		<Preference android:key="pref_user_explorer_key"
			android:title="@string/user_defined_explorer_key" android:summary="@string/user_defined_not_set" />

	</PreferenceCategory>

	<PreferenceCategory android:title="@string/keypad_title"
		android:key="pref_category_keypad_settings">

		<ListPreference android:key="pref_keypad_type"
			android:dialogTitle="@string/pref_keypad_type_title"
			android:title="@string/pref_keypad_type_title"
			android:summary="@string/pref_keypad_type_summary"
			android:entries="@array/pref_keypad_type_entries"
			android:entryValues="@array/pref_keypad_type_values" />
		<ListPreference android:key="pref_keypad_type_sec"
			android:dialogTitle="@string/pref_keypad_type_sec_title"
			android:title="@string/pref_keypad_type_sec_title"
			android:summary="@string/pref_keypad_type_sec_summary"
			android:entries="@array/pref_keypad_type_sec_entries"
			android:entryValues="@array/pref_keypad_type_sec_values" />
		<ListPreference android:key="pref_keypad_multipress"
			android:dialogTitle="@string/pref_keypad_multipress_title"
			android:title="@string/pref_keypad_multipress_title"
			android:summary="@string/pref_keypad_multipress_summary"
			android:entries="@array/pref_keypad_multipress_entries"
			android:entryValues="@array/pref_keypad_multipress_values" />
		<ListPreference android:key="pref_keypad_mplang"
			android:dialogTitle="@string/pref_keypad_mplang_title"
			android:title="@string/pref_keypad_mplang_title"
			android:summary="@string/pref_keypad_mplang_summary"
			android:entries="@array/pref_keypad_mplang_entries"
			android:entryValues="@array/pref_keypad_mplang_values" />
		<CheckBoxPreference android:key="pref_keypad_keylayout"
			android:title="@string/pref_keypad_keylayout_title"
			android:summary="@string/pref_keypad_keylayout_summary" />

	</PreferenceCategory>

	<PreferenceCategory android:title="@string/qtouch_title"
		android:key="pref_category_qtouch_settings">

		<ListPreference android:key="pref_qtouch_num"
			android:dialogTitle="@string/pref_qtouch_num_title"
			android:title="@string/pref_qtouch_num_title"
			android:summary="@string/pref_qtouch_num_summary"
			android:entries="@array/pref_qtouch_num_entries"
			android:entryValues="@array/pref_qtouch_num_values" />

	</PreferenceCategory>

	<PreferenceCategory android:title="@string/dock_title"
		android:key="pref_category_dock_settings">

		<CheckBoxPreference android:key="pref_dock_observer_off"
			android:title="@string/pref_dock_observer_off_title"
			android:summary="@string/pref_dock_observer_off_summary" />

	</PreferenceCategory>

</PreferenceScreen>
